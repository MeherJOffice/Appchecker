{
    "hosting": {
        "public": "public",
        "ignore": [ "firebase.json", "**/.*", "**/node_modules/**" ],
        "rewrites": [
            {
                "source": "/checkAppStatus",
                "function": "checkAppStatus"
            },
            {
                "source": "/addMonitor",
                "function": "addMonitor"
            },
            {
                "source": "/slack/events",
                "function": "slackEvents"
            }
        ],
        "headers": [
            {
                "source": "/favicon.svg",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000"
                    }
                ]
            }
        ]
    },
    "functions": { "runtime": "nodejs20" }
}
